{
  "name": "gh-describe",
  "version": "1.4.3",
  "description": "`git describe --tags` in shallow clones on GitHub Actions.",
  "main": "dist/cli.ts",
  "scripts": {
    "build": "deno run --allow-env --allow-net --allow-read --allow-run --allow-write _build.ts",
    "compile": "deno run --allow-env --allow-net --allow-read --allow-run --allow-write _compile.ts",
    "fix": "run-s fix:*",
    "fix:deno-lint": "deno lint --config deno.jsonc",
    "fix:deno-fmt": "deno fmt --config deno.jsonc",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:deno-lint": "deno lint --config deno.jsonc",
    "lint:deno-fmt": "deno fmt --check --config deno.jsonc",
    "start": "npm run start:deno",
    "start:deno": "deno run --allow-run --unstable cli/main.ts",
    "start:node": "npm run build && node dist/cli.js",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "deno test core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proudust/gh-describe.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "Proudust",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/proudust/gh-describe/issues"
  },
  "homepage": "https://github.com/proudust/gh-describe#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
